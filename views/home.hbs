<div class="row">
  <div class="col-6"><h1>Users</h1></div>
  <div class="col-6 d-flex justify-content-end">
    <a href="/add-user" type="button" class="btn btn-dark text-white btn-lg mb-2 align-self-center"><i class="bi bi-person-plus"></i>  add new user</a>
  </div>

</div>



<table class="table table-bordered table-hover" style="color: #206C43">
  <thead class="thead">
    <tr>
      <th scope="col">#</th>
      <th scope="col">UserName</th>
      <th scope="col">Name</th>
      <th scope="col">Email Address</th>
      <th scope="col">Age</th>
      <th scope="col" class="text-center">Action</th>
    </tr>
  </thead>
  <tbody>

    {{#each rows}}
    <tr>
      <th scope="row" value={{addOne @index}} >{{addOne @index}}</th>
      <td>{{this.username}}</td>
      <td>{{this.name}}</td>
      <td>{{this.email}}</td>
      <td>{{this.age}}</td>
      <td class="text-center">
          <a href ="/edit-user/{{this._id}}" type="button" class="btn btn-light btn smal" ><i class="bi bi-pencil"></i> Edit</a>
          <a href ="/{{this._id}}" type="button" class="btn btn-light btn smal" ><i class="bi bi-trash"></i> Delete</a>
      </td>
    </tr>
    {{/each}}

  </tbody>
</table>